{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Creates new occurrence",
  "description": "Payload to create a new occurrence",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "Occurrence description"
    },
    "author": {
      "type": "string",
      "description": "Occurrence author"
    },
    "position": {
      "description": "Occurrence geographic location",
      "type": "string"
    },
    "status": {
      "type": "string",
      "description": "Occurrence status",
      "default": "por validar"
    },
    "category": {
      "type": "string",
      "description": "Occurrence category"
    }
  },
  "required": [
    "description",
    "author",
    "position",
    "status",
    "category"
  ]
}
